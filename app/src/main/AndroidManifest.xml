<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.needforsasquatch">

    <!-- Required permission to read external storage if needed in the future -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Needforsasquatch">
        <receiver
            android:name=".NewAppWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <!-- MainActivity: Launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ModeSelectionActivity -->
        <activity
            android:name=".ModeSelectionActivity"
            android:exported="false" /> <!-- DashModeActivity -->
        <activity
            android:name=".DashModeActivity"
            android:exported="false" /> <!-- GameOverActivity: Fullscreen theme for the 'You Died' image -->
        <activity
            android:name=".GameOverActivity"
            android:exported="false" />
    </application>

</manifest>